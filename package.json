{
  "name": "saleor-app-hono-template",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode client && vite build",
    "preview": "wrangler pages dev --port=3000",
    "deploy": "pnpm run build && wrangler pages deploy",
    "fetch-schema": "curl https://raw.githubusercontent.com/saleor/saleor/${npm_package_saleor_schemaVersion}/saleor/graphql/schema.graphql > graphql/schema.graphql",
    "generate": "graphql-codegen",
    "format": "prettier --write .",
    "check-types": "tsc -b --noEmit"
  },
  "saleor": {
    "schemaVersion": "3.20"
  },
  "dependencies": {
    "@saleor/app-sdk": "1.5.0",
    "@vitejs/plugin-react": "5.1.2",
    "graphql": "^16.10.0",
    "graphql-tag": "^2.12.6",
    "hono": "4.10.8",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "urql": "^4.2.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20251212.0",
    "@graphql-codegen/cli": "6.1.0",
    "@graphql-codegen/introspection": "5.0.0",
    "@graphql-codegen/schema-ast": "5.0.0",
    "@graphql-codegen/typed-document-node": "6.1.4",
    "@graphql-codegen/typescript": "5.0.6",
    "@graphql-codegen/typescript-operations": "5.0.6",
    "@graphql-codegen/typescript-urql": "4.0.1",
    "@graphql-codegen/urql-introspection": "3.0.1",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@hono/vite-build": "1.8.0",
    "@hono/vite-cloudflare-pages": "0.4.3",
    "@hono/vite-dev-server": "0.23.0",
    "@types/react": "^19.0.3",
    "@types/react-dom": "^19.0.2",
    "prettier": "^3.4.2",
    "vite": "6.4.1",
    "wrangler": "4.54.0"
  }
}
